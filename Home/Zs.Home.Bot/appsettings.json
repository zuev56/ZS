{
  "Bot": {
    "Token": "",
    "Name": "",
    "OwnerChatRawId": 0,
    "CliPath": "/bin/bash",
    "PrivilegedUserRawIds": [ ]
  },

  "ConnectionStrings": {
    "Default": ""
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:6022"
      }
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://srv-1:8500" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "DEV.HomeBot"
    }
  },

  "Seq": {
    "Url": "http://srv-1:8500",
    "Token": "",
    "ObservedSignals": [ 36, 39 ],
    "RequestedEventsCount": 1000
  },

  "Notifier": {
    "FromHour": "8", "ToHour": "22"
  },

  "ConnectionAnalyser": {
    "Urls": [ "https://vk.com/", "https://yandex.ru/", "https://www.google.ru/" ]
  },

  "PingChecker": {
    "Attempts": 3,
    "Timeout": "00:00:00.3",
    "Targets": [
      { "Host": "192.168.1.2", "Description": "TP-Link router" },
      { "Host": "192.168.1.105", "Port": 8080, "Description": "Baby camera" },
      { "Host": "192.168.1.108", "Description": "Window camera" },
      { "Host": "192.168.1.120", "Description": "ESP Meteo" }
    ]
  },

  "Proxy": {
    "UseProxy": false,
    "Socket": "address:port",
    "User": "",
    "Password": ""
  },

  "UserWatcher": {
    "VkActivityApiUri": "http://localhost:6011",
    "TrackedIds": [ 8790237 ],
    "InactiveHoursLimit": 1
  },

  "HardwareMonitor": {
    "ShellPath": "/bin/bash",
    "WarnMemoryUsage": 5,
    "WarnCpuUsage": 0.1,
    "WarnCpuTemperature": 30
  },

  "WeatherAnalyzer": {
    "Devices": [
      {
        "Uri": "http://192.168.1.120/",
        "Name": "ESP Meteo",
        "Sensors": [
          {
            "Name": "DHT11/22 1",
            "Alias" : "ServerCabinet",
            "Parameters": [
              { "Name": "Temperature", "LoLo": 12, "Lo": 15, "Hi": 26, "HiHi": 28 },
              { "Name": "Humidity", "LoLo": 30, "Lo": 35, "Hi": 55, "HiHi": 60 }
            ]
          },
          {
            "Name": "DHT11/22 2",
            "Alias" : "Bedroom",
            "Parameters": [
              { "Name": "Temperature", "LoLo": 18, "Lo": 20, "Hi": 23, "HiHi": 25 },
              { "Name": "Humidity", "LoLo": 30, "Lo": 35, "Hi": 55, "HiHi": 60 }
            ]
          }
        ]
      }
    ]
  }
}
