{
  "Bot": {
    "Token": "",
    "Name": "",
    "OwnerChatRawId": 0,
    "CliPath": "/bin/bash",
    "PrivilegedUserRawIds": [ ]
  },

  "ConnectionStrings": {
    "Default": ""
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:6022"
      }
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://192.168.1.104:8500" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "DEV.HomeBot"
    }
  },

  "Seq": {
    "Url": "http://192.168.1.104:8500",
    "ApiKey": null,
    "MaxEventsPerRequest": 10000
  },

  "Notifier": {
    "FromHour": "8", "ToHour": "22"
  },

  "ConnectionAnalyser": {
    "Urls": [ "https://vk.com/", "https://yandex.ru/", "https://www.google.ru/" ]
  },

  "Proxy": {
    "UseProxy": false,
    "Socket": "address:port",
    "User": "",
    "Password": ""
  },

  "HomeClient": {
    "Url": "http://localhost:6024"
  },

  "UserWatcher": {
    "VkActivityApiUri": "http://localhost:6011",
    "TrackedIds": [ 8790237 ],
    "InactiveHoursLimit": 1
  },

  "HardwareMonitor": {
    "ShellPath": "/bin/bash",
    "Scripts": {
      "MemoryAmountGb": "awk '/MemTotal/ {print $2/1024/1024}' /proc/meminfo",
      "MemoryAvailableGb": "awk '/MemAvailable/ {print $2/1024/1024}' /proc/meminfo",

      "Cpu15MinUsage": "awk -v cores=$(nproc) '{printf \"%.0f\", 100 * $3 / cores}' /proc/loadavg",
      "CpuTemperatureC": "cat /sys/class/thermal/thermal_zone*/temp 2>/dev/null | head -1 | awk '{printf \"%.1f\", $1/1000}' || echo 0",

      "StorageTemperatureC": "sudo smartctl -a /dev/nvme0n1 | awk '/Temperature:/ {print $2}'",
      "StorageAmountGb": "df -BG --output=size / | tail -n 1 | awk '{gsub(\"G\",\"\",$1); gsub(\"G\",\"\",$2); print $1}'",
      "StorageAvailableGb": "df -BG --output=avail / | tail -n 1 | awk '{gsub(\"G\",\"\",$1); gsub(\"G\",\"\",$2); print $1}'"
    }
  },

  "WeatherAnalyzer": {
    "Devices": [
      {
        "Uri": "http://192.168.1.120/",
        "Name": "ESP Meteo",
        "Sensors": [
          {
            "Name": "DHT11/22 1",
            "Alias" : "ServerCabinet",
            "Parameters": [ { "Name": "Temperature" }, { "Name": "Humidity" } ]
          },
          {
            "Name": "DHT11/22 2",
            "Alias" : "Bedroom",
            "Parameters": [ { "Name": "Temperature" }, { "Name": "Humidity" } ]
          }
        ]
      }
    ]
  }
}
