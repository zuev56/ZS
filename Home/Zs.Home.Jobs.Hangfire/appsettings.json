{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Default": ""
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:6023"
      }
    }
  },

  "HomeBotUrl": "http://localhost:6022",

  "HomeClient": {
    "Url": "http://localhost:6024"
  },

  "LogAnalyzer": {
    "CronExpression": "*/5 * * * *"
  },

  "HardwareAnalyzer": {
    "CronExpression": "*/5 * * * *"
  },

  "PingChecker": {
    "CronExpression": "*/5 * * * *"
  },

  "Seq": {
    "CronExpression": "0 * * * *" // Сделать, чтобы не беспокоил по ночам
  },

  "UserWatcher": {
    "CronExpression": "*/10 * * * *",
    "VkActivityApiUri": "http://localhost:6011",
    "TrackedIds": [ 8790237 ],
    "InactiveHoursLimit": 1
  },

  "WeatherAnalyzer": {
    "CronExpression": "*/5 * * * *"
  },

  "WeatherRegistrator": {
    "CronExpression": "*/10 * * * *",
    "Places": [
      { "Id": 1, "Name": "Bedroom" },
      { "Id": 2, "Name": "Server cabinet" }
    ],
    "Sensors": [
      { "Id": 1, "PlaceId": "1", "Name": "DHT11/22 2", "Uri": "http://192.168.1.120/" },
      { "Id": 2, "PlaceId": "2", "Name": "DHT11/22 1", "Uri": "http://192.168.1.120/" },
      { "Id": 3, "PlaceId": "2", "Name": "BMP085/180", "Uri": "http://192.168.1.120/", "Except": "Temperature" }
    ]
  }
}
