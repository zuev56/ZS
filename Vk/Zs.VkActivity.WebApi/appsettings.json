{
  "ConnectionStrings": {
    "Default": ""
  },

  "Vk": {
    "Version": 5.199,
    "AccessToken": ""
  },

  "Swagger": {
    "ApiTitle": "VkActivity.Api",
    "ApiVersion": "v1",
    "EndpointUrl": "/swagger/v1/swagger.json"
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:6011"
      }
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://srv-1:8500" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "VkActivity.Api"
    }
  }
}
