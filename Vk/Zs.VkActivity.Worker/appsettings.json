{
  "ConnectionStrings": {
    "Default": ""
  },

  "Vk": {
    "Version": 5.199,
    "AccessToken": "",
    "InitialUserIds": [ 8790237 ],
    "ActivityLogIntervalSec": 30,
    "UsersDataUpdateIntervalHours": 24
  },

  "ConnectionAnalyzer": {
    "Urls": [ "https://yandex.ru/", "https://vk.com/", "https://www.google.ru/" ]
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "VkActivity.Data": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://192.168.1.104:8500" }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "DEV.VkActivity.Worker"
    }
  }
}
